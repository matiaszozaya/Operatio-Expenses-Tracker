@page "/register"
@inject ExpensesTracker.Services.AuthService Auth
@inject NavigationManager Nav

<AuthorizeView>
    <Authorized>
        <div class="alert alert-success" role="alert">
            You are already logged in!
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="card mx-auto" style="max-width:28rem; margin-top:2rem;">
            <div class="card-body">
                <h2 class="h5 mb-3">Create an account</h2>
                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="text-danger mb-3">@error</div>
                }
                <div class="mb-3">
                    <input placeholder="Username" class="form-control mb-2" @bind="username" />
                    <input placeholder="Password" type="password" class="form-control mb-2" @bind="password" />
                    <button class="btn btn-success w-100" @onclick="HandleRegister">Register</button>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    string username = string.Empty;
    string password = string.Empty;
    string? error;

    async Task HandleRegister()
    {
        var (ok, err) = await Auth.RegisterAsync(username, password);
        if (!ok) { error = err; return; }
        Nav.NavigateTo("/");
    }
}

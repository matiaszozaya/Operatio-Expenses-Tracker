@page
@model ExpensesTracker.Pages.ErrorModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Expenses Tracker</title>
    <link href="/css/bootstrap.css" rel="stylesheet">
</head>
<body>
    <div class="min-vh-100 d-flex align-items-center justify-content-center">
        <div class="card p-4" style="max-width:28rem;">
            <h1 class="h4 text-danger mb-3">Error</h1>
            @if (Model.ShowRequestId)
            {
                <p class="mb-3">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }
            <p class="text-body mb-4">An error occurred while processing your request.</p>
            <a href="/" class="btn btn-primary">Return Home</a>
        </div>
    </div>
</body>
</html>
@page
@model ExpensesTracker.Pages.ErrorModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Expenses Tracker</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex items-center justify-center">
        <div class="max-w-md w-full bg-white shadow rounded p-8">
            <h1 class="text-2xl font-bold text-red-600 mb-4">Error</h1>
            @if (Model.ShowRequestId)
            {
                <p class="text-gray-600 mb-4">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }
            <p class="text-gray-800 mb-6">An error occurred while processing your request.</p>
            <a href="/" class="inline-block bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Return Home</a>
        </div>
    </div>
</body>
</html>